<h2 class="page"><%= t('.sign_up') %></h2>
<div class="container">
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="col-3">
        <div class="input-group mb-3">
          <%= f.label :name, class: "input-group-text", id: "basic-addon1" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          <span></span>
        </div>
      </div>

      <div class="col-6">
        <div class="input-group mb-3">
          <%= f.label :email, class: "input-group-text", id: "basic-addon1" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <span class="col-2"></span>
        </div>
      </div>

      <div class="col-6">
        <div class="input-group mb-3">
        <%= f.label :password, class: "input-group-text", id: "basic-addon1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
      </div>
    </div>

    <div class="col-6">
      <div class="input-group mb-3">
        <%= f.label :password_confirmation, class: "input-group-text", id: "basic-addon1" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        <span class="col-1"></span>
      </div>
    </div>

      <div class="col-6">
        <%= f.submit t('.sign_up') %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
