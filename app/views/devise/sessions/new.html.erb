<h2 class="page"><%= t('.sign_in') %></h2>
<div class="container">
  <div class="row">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="col-6">
      <div class="input-group mb-3">
        <%= f.label :email, class: "input-group-text", id: "basic-addon1" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
    <div class="col-6">
      <div class="input-group mb-3">
        <%= f.label :password, class: "input-group-text", id: "basic-addon1" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>
      <div class="col-6">
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>
    <div class="col-6">
      <div class="actions">
        <%= f.submit t('.sign_in') %>
      </div>
    </div>

    <% end %>
<div class="col-6">
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
